<%= link_to 'Create New Post' , new_post_path%>

<% if @posts.present? %>
  <table>
    <thead>
    <th> Title </th>
    <th> Information </th>
    <th> Actions </th>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td> <%= link_to 'Add Comments' %></td>
        <td> <%= link_to 'Edit' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<% else %>
  <h1> No Posts Available for this User</h1>
<% end %>