<%= form_for @post do |comment| %>

  <%= comment.label :title %>:
  <%= comment.text_field :title %><br />

  <%= comment.label :information %>:
  <%= comment.text_area :body %><br />

  <%= comment.label 'What should we do with this new post' %>
  <%= comment.select :status, @available_status %><br />

  <%= comment.submit 'Save'%>
<%= link_to 'Back', posts_path %>
<% end %>